@model waSemana11.categoria

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center ">Insertar nuevas Categorias</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Categoría</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group ">
                            <label class="ps-lg-5" for="nomcat">Categoría :</label>
                            @Html.EditorFor(model => model.nomcat, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                            @Html.ValidationMessageFor(model => model.nomcat, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="ps-lg-5" for="descat">Descripción :</label>
                            @Html.EditorFor(model => model.descat, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                            @Html.ValidationMessageFor(model => model.descat, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-primary ">Crear Categoria</button>
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
